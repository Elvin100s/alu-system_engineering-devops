#!/usr/bin/env bash
# Script: 0-custom_http_response_header
# Description: Configures a new Ubuntu machine to set up Nginx with a custom HTTP response header.
# The custom header is `X-Served-By`, and its value is the hostname of the server.
# This script is idempotent and can be run multiple times without issues.

# Enable debugging (uncomment for debugging purposes)
# set -x

# Function to check if a command is installed and install it if not
function install() {
    command -v "$1" &> /dev/null
    if [ $? -ne 0 ]; then
        echo -e "Installing: $1\n"
        sudo apt-get update -y -qq && sudo apt-get install -y "$1" -qq
        echo -e "\n"
    else
        echo -e "${1} is already installed.\n"
    fi
}

# Check for sudo privileges
if [ "$EUID" -ne 0 ]; then
    echo "Please run as root or with sudo."
    exit 1
fi

# Ensure hostname is set correctly
if [[ "$(hostname)" != "6536-web-01" && "$(hostname)" != "6536-web-02" ]]; then
    echo "Hostname is not set correctly. Please set it to 6536-web-01 or 6536-web-02."
    exit 1
fi

echo -e "Updating and doing some minor checks...\n"

# Install Nginx if not already installed
install nginx

echo -e "\nSetting up some minor stuff.\n"

# Allow Nginx through the firewall
sudo ufw allow 'Nginx HTTP'

# Ensure /var/www directory exists and set proper permissions
if [ -d "/var/www" ]; then
    sudo chown -R "$USER":"$USER" /var/www
    sudo chmod -R 755 /var/www
else
    sudo mkdir -p /var/www
    sudo chown -R "$USER":"$USER" /var/www
    sudo chmod -R 755 /var/www
fi

# Create necessary directories if they don't exist
for dir in /var/www/{html,error}; do
    if ! [ -d "$dir" ]; then
        mkdir -p "$dir"
    fi
done

# Create a simple index.html file
echo "Hello World!" > /var/www/html/index.html

# Create a custom 404 error page
echo "Ceci n'est pas une page" > /var/www/html/error_404.html

# Backup the default Nginx server configuration file
sudo cp /etc/nginx/sites-enabled/default /etc/nginx/sites-enabled/default.backup

# Define the Nginx server configuration with the custom header
server_config=\
"server {
    listen 80 default_server;
    listen [::]:80 default_server;
    root /var/www/html;
    index index.html index.htm index.nginx-debian.html;
    server_name _;
    add_header X-Served-By \$hostname;
    location / {
        try_files \$uri \$uri/ =404;
    }
    if (\$request_filename ~ redirect_me) {
        rewrite ^ https://th3-gr00t.tk/ permanent;
    }
    error_page 404 /error_404.html;
    location = /error_404.html {
        internal;
    }
}"

# Write the new Nginx server configuration
echo "$server_config" | sudo tee /etc/nginx/sites-enabled/default > /dev/null

# Restart Nginx to apply changes
if [ "$(pgrep -c nginx)" -le 0 ]; then
    sudo service nginx start
else
    sudo service nginx restart
fi

echo -e "\nNginx configuration complete. Custom header 'X-Served-By' is set to the hostname.\n"

# Verify the custom header
echo -e "Testing the custom header...\n"
curl -sI localhost | grep X-Served-By

echo -e "\nScript execution complete.\n"
